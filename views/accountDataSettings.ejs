<header>
    <h1>SOSS</h1>

    <% if(userData === "false" && accountData === "false"){ %>
      
      <a href="/login">
        <button>Login</button>
      </a>
      
      <% } else{ %>
        <a href="/profile/myProfile/<%= userData._id %>" class="myprofile-forward">
          <section class="small-profile-pic">
            <img src="<%= accountData.profilePic %>" alt="">
          </section>
          <!-- <a href="/profile">
            <%= userData.userName %>
         </a> -->
        </a>
        <% } %>
</header>

<h3>update Your Account Data</h3>


<main>
    <form action="/profile/updateAccountData/<%= userData._id %>" enctype="multipart/form-data" method="POST">
  
    <section class="upload">
      <img id="chosenppic" src="<%= accountData.profilePic %>" width="100" height="100" alt="">
      <section class="round">
        <input type="file" class="form-control" id="imageUpload" name="file" >
        <i class="fa fa-camera" style="color: #fff;"></i>
      </section>
    </section>
    <label for="bio"><span>Your Bio:</span> <span>:سيرتك الذاتية</span> </label>
    <textarea name="bio" id="bio" placeholder="Write Your Bio Here ..."><%= accountData.bio %></textarea>
    <label for="profession"> <span>Profession:</span> <span>:المهنة </span></label>
    <input name="profession"  id="profession" type="text" placeholder="profession" value="<%= accountData.profession %>">
    <h3>Social Contacts</h3>
    <label for="twitter"><span><i class='bx bxl-twitter' ></i>Twitter:</span>   <span>:تويتر</span></label>
    <input  type="text" name="twitter" id="twitter" value="<%= accountData.twitter %>">
    <label for="facebook"><span><i class='bx bxl-facebook-square'></i>Facebook</span><span>:فيسبوك</span></label>
    <input type="text" name="facebook" id="facecbook" value="<%= accountData.facebook %>">
    <label for="phonenumber"><span><i class='bx bx-phone' ></i>Phone Number:</span><span>:رقم الهاتف</span></label>
    <input type="text" name="phonenumber" id="phonenumber" value="<%= accountData.phoneNumber %>">
  
